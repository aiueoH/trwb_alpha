<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="40dp"
    card_view:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/relativeLayout_mainSpace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="mainSpace">

            <ImageView
                android:id="@+id/imageView_mainSpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout_mainSpace"
                android:layout_alignLeft="@+id/linearLayout_mainSpace"
                android:layout_alignRight="@+id/linearLayout_mainSpace"
                android:layout_alignTop="@+id/linearLayout_mainSpace"
                android:scaleType="center"
                android:src="@drawable/jm0107_small"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout_mainSpace"
                android:layout_alignLeft="@+id/linearLayout_mainSpace"
                android:layout_alignRight="@+id/linearLayout_mainSpace"
                android:layout_alignTop="@+id/linearLayout_mainSpace"
                android:alpha="0.65"
                android:background="#6c6c6c"
                android:scaleType="center"/>

            <LinearLayout
                android:id="@+id/linearLayout_mainSpace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/textView_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2012/12/21"
                    android:textColor="#ffffff"/>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >

                    <TextView
                        android:id="@+id/textView_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text=">"
                        android:textColor="#ffffff"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/textView_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/textView_arrow"
                        android:text="大美國"
                        android:textColor="#ffffff"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/textView_departureTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView_from"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/textView_arrow"
                        android:text="13:00"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:id="@+id/textView_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/textView_arrow"
                        android:text="波多黎各"
                        android:textColor="#ffffff"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/textView_arrivalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView_to"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/textView_arrow"
                        android:text="13:00"
                        android:textColor="#ffffff"/>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/layout_trainType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="車　　種："
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/textView_trainType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="勝利號"
                    android:textSize="18dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="車　　次："
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/textView_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="689"
                    android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="張　　數："
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/textView_qtu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="18dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_fare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="票　　價："
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/textView_fare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_totalPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="總　　價："
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/textView_totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="350"
                    android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身分證號："
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/textView_personid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A123456789"
                    android:textSize="18dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="電腦代碼："
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/textView_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:text="123456"
                    android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_buttom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:transitionGroup="false"
                android:transitionName="linearLayout_buttom">

                <LinearLayout
                    android:id="@+id/linearLayout_isBooked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_isBooked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已訂到"
                        android:textColor="#5aa047"
                        android:textSize="18dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_isCancelled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_isCancelled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已退訂"
                        android:textColor="#f56262"
                        android:textSize="18dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_delete"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刪除"
                        android:textColor="#AAAAAA"
                        android:textSize="18dp"/>

                    <Button
                        android:id="@+id/button_book"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="訂票"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp"/>

                    <Button
                        android:id="@+id/button_cancel"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退訂"
                        android:textColor="#AAAAAA"
                        android:textSize="18dp"
                        android:visibility="gone"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>